<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/list">

    <fragment
        android:id="@+id/list"
        android:name="com.gmail.vladkhinski.homework_app.fragment.ListFragment"
        tools:layout="@layout/fragment_list">
        <action
            android:id="@+id/to_character"
            app:destination="@+id/character_details" />


    </fragment>

    <fragment
        android:id="@+id/character_details"
        android:name="com.gmail.vladkhinski.homework_app.fragment.DetailsFragment"
        tools:layout="@layout/fragment_details">
        <argument
            android:name="id"
            app:argType="long" />
    </fragment>


</navigation>